<Page
    x:Class="HeartRateBroadcastReceiver.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HeartRateBroadcastReceiver.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:pages="clr-namespace:HeartRateBroadcastReceiver.ViewModels.Pages"
    Title="HomePage"
    d:DataContext="{d:DesignInstance Type=pages:HomePageViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  上方 - 设备连接  -->
        <Border
            Grid.Row="0"
            Margin="0"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="15,15,15,15"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="设备连接" />

                <StackPanel Grid.Row="1" Margin="15,0,15,15">
                    <ComboBox
                        x:Name="DeviceComboBox"
                        Margin="0,0,0,10"
                        IsReadOnly="True"
                        SelectedIndex="0">
                        <ComboBoxItem Content="Xiaomi" />
                        <ComboBoxItem Content="HUAWEI" />
                    </ComboBox>

                    <ui:Button 
                        x:Name="ConnectButton"
                        Margin="0,0,0,10" 
                        Content="连接设备" 
                        Click="ConnectButton_Click"/>
                    <ui:Button 
                        x:Name="DisconnectButton"
                        Content="断开连接" 
                        Click="DisconnectButton_Click"/>

                    <TextBlock 
                        Margin="0,20,0,0" 
                        Text="{Binding ConnectionStatus, StringFormat='连接状态: {0}'}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  下方 - 当前心率  -->
        <Border
            Grid.Row="1"
            Margin="0,20,0,20"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="15,15,15,15"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="当前心率" />

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        x:Name="HeartRateTextBlock"
                        HorizontalAlignment="Center"
                        FontSize="48"
                        FontWeight="Bold"
                        Text="{Binding HeartRate}" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Text="bpm" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>